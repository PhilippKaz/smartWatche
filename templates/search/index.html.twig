{# Шаблон поиска #}
<div class="sidebar-search" style="width: 110%">
        <div class="input-group" style="width: 110%">
            <form action="/search/" class="search" id="mySuperForm">
                <input type="text" id="search" style="margin-left: -45px; width: 150px;" class="form-control search-menu" placeholder="Поиск...">
                <button class="btn btn-info fl" style="width: 40px; height: 35px;" onclick="mySuperForm.action += encodeURIComponent(search.value)"><i class="glyphicon glyphicon-search" aria-hidden="true"></i></button>
            </form>
            <div class="input-group-append">
              <span class="input-group-text">
                <i class="fa fa-search" aria-hidden="true"></i>
              </span>
            </div>
    </div>
</div>
