            <div class = "descr">
            </div>
        </div>
    {% elseif is_granted("IS_AUTHENTICATED_ANONYMOUSLY") %}
        <div class = "poster" style="padding-bottom: -100vh">
            <button type="button" class="btn btn-info btninf" style = "border-radius: 50px; height: 20vh;  margin-top: -26vh;  margin-left: 77%;">Подробнее</button>
            <div class = "descr">
                <h4>Название: {{ data.title }}</h4>
                <hr>
            </div>
        </div>
