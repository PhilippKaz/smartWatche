        <li class="parent ">
            <a href="#">
                <span data-toggle="collapse" href="#sub-item-2"><svg class="glyph stroked upload"><use xlink:href="#stroked-chevron-down"></use></svg></span> Импорт данных
            </a>
            <ul class="children collapse" id="sub-item-2">
                {% if countCategory != null %}
                    <li>
                        <a class="" href="">
                            <svg class="glyph stroked upload"><use xlink:href="#stroked-chevron-right"></use></svg> Импорт категории
                        </a>
                    </li>
                    {% if countProject != null %}
                        <li>
                            <a class="" href="">
                                <svg class="glyph stroked upload"><use xlink:href="#stroked-chevron-right"></use></svg> Импорт проектов
                            </a>
                        </li>
                        <li>
                            <a class="" href="">
                                <svg class="glyph stroked upload"><use xlink:href="#stroked-chevron-right"></use></svg> Импорт видео
                            </a>
                        </li>
                    {% else %}
                        <li>
