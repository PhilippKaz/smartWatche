                        {% if is_granted("ROLE_USER") %}
                            <li><a> Вы зашли как, {{ user }} </a></li>
                            <li>
                                <a href="{{ path('fos_user_security_logout') }}"> <i class="glyphicon glyphicon-log-out"></i>{{ 'Выйти'|trans({}, 'FOSUserBundle') }}</a>
                            </li>
                        {% else %}
                            <li><a href="{{ path('fos_user_security_login') }}"><i class="glyphicon glyphicon-log-in"></i>{{ 'Войти'|trans({}, 'FOSUserBundle') }}</a></li>
